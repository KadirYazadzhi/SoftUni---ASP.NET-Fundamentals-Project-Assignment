@model AuctionHub.Domain.Models.PaginatedList<AuctionHub.Models.ViewModels.AuctionListViewModel>
@{
    ViewData["Title"] = "Explore Auctions";
    var categories = ViewBag.Categories as IEnumerable<SelectListItem>;
    var currentSort = ViewData["CurrentSort"] as string;
    var currentSearch = ViewData["CurrentSearch"] as string;
    var currentCategory = ViewData["CurrentCategory"] as int?;
    var minPrice = ViewData["MinPrice"] as decimal?;
    var maxPrice = ViewData["MaxPrice"] as decimal?;
    var status = ViewData["Status"] as string;
}

<div class="container py-4">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 mb-4 animate-fade-up">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 100px; z-index: 1000;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-sliders me-2"></i>Filters</h5>
                    <form method="get" asp-action="Index">
                        <!-- Search -->
                        <div class="mb-3">
                            <label class="form-label small text-uppercase text-muted fw-bold">Search</label>
                            <input type="text" name="searchTerm" class="form-control" value="@currentSearch" placeholder="Keywords..." />
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label class="form-label small text-uppercase text-muted fw-bold">Category</label>
                            <select name="categoryId" class="form-select" asp-items="categories">
                                <option value="">All Categories</option>
                            </select>
                            @if (currentCategory.HasValue)
                            {
                                <script>
                                    document.querySelector('select[name="categoryId"]').value = "@currentCategory";
                                </script>
                            }
                        </div>

                        <!-- Price Range -->
                        <div class="mb-3">
                            <label class="form-label small text-uppercase text-muted fw-bold">Price Range</label>
                            <div class="d-flex gap-2 align-items-center">
                                <input type="number" name="minPrice" class="form-control" placeholder="Min" value="@minPrice" />
                                <span>-</span>
                                <input type="number" name="maxPrice" class="form-control" placeholder="Max" value="@maxPrice" />
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <label class="form-label small text-uppercase text-muted fw-bold">Status</label>
                            <select name="status" class="form-select">
                                <option value="active">Active Only</option>
                                <option value="all">All Auctions</option>
                                <option value="closed">Closed Only</option>
                            </select>
                             @if (!string.IsNullOrEmpty(status))
                            {
                                <script>
                                    document.querySelector('select[name="status"]').value = "@status";
                                </script>
                            }
                        </div>
                        
                        <!-- Sort (Hidden here, synced if needed or simple reset) -->
                        <input type="hidden" name="sortOrder" value="@currentSort" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-pill">Apply Filters</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Reset</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Results -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up delay-100" style="position: relative; z-index: 10;">
                <h2 class="fw-bold m-0">Auctions</h2>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle rounded-pill px-4" type="button" data-bs-toggle="dropdown">
                        Sort By: @(currentSort == "price_asc" ? "Price: Low to High" : currentSort == "price_desc" ? "Price: High to Low" : currentSort == "newest" ? "Newest Listed" : "Ending Soonest")
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                        <li><a class="dropdown-item" asp-route-sortOrder="" asp-route-searchTerm="@currentSearch" asp-route-categoryId="@currentCategory" asp-route-minPrice="@minPrice" asp-route-maxPrice="@maxPrice" asp-route-status="@status">Ending Soonest</a></li>
                        <li><a class="dropdown-item" asp-route-sortOrder="newest" asp-route-searchTerm="@currentSearch" asp-route-categoryId="@currentCategory" asp-route-minPrice="@minPrice" asp-route-maxPrice="@maxPrice" asp-route-status="@status">Newest Listed</a></li>
                        <li><a class="dropdown-item" asp-route-sortOrder="price_asc" asp-route-searchTerm="@currentSearch" asp-route-categoryId="@currentCategory" asp-route-minPrice="@minPrice" asp-route-maxPrice="@maxPrice" asp-route-status="@status">Price: Low to High</a></li>
                        <li><a class="dropdown-item" asp-route-sortOrder="price_desc" asp-route-searchTerm="@currentSearch" asp-route-categoryId="@currentCategory" asp-route-minPrice="@minPrice" asp-route-maxPrice="@maxPrice" asp-route-status="@status">Price: High to Low</a></li>
                    </ul>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-search display-1 text-muted opacity-25"></i>
                    <h3 class="mt-3 text-muted">No auctions found</h3>
                    <p>Try adjusting your filters or search terms.</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4 animate-fade-up delay-200">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <partial name="_AuctionCardPartial" model="item" />
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav class="mt-5 d-flex justify-content-center">
                        <ul class="pagination">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link rounded-start-pill px-3" asp-route-pageNumber="@(Model.PageIndex - 1)" 
                                   asp-route-sortOrder="@currentSort" asp-route-searchTerm="@currentSearch" 
                                   asp-route-categoryId="@currentCategory" asp-route-minPrice="@minPrice" 
                                   asp-route-maxPrice="@maxPrice" asp-route-status="@status">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                            <li class="page-item disabled">
                                <span class="page-link px-3">Page @Model.PageIndex of @Model.TotalPages</span>
                            </li>
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link rounded-end-pill px-3" asp-route-pageNumber="@(Model.PageIndex + 1)"
                                   asp-route-sortOrder="@currentSort" asp-route-searchTerm="@currentSearch"
                                   asp-route-categoryId="@currentCategory" asp-route-minPrice="@minPrice"
                                   asp-route-maxPrice="@maxPrice" asp-route-status="@status">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>
