@model AuctionHub.Domain.Models.PaginatedList<AuctionHub.Models.ViewModels.AuctionListViewModel>
@{
    var targetUser = ViewData["TargetUser"] as string;
    var targetUserImage = ViewData["TargetUserImage"] as string;
    ViewData["Title"] = $"{targetUser}'s Auctions";
    var categories = ViewBag.Categories as IEnumerable<SelectListItem>;
    var currentSort = ViewData["CurrentSort"] as string;
    var currentSearch = ViewData["CurrentSearch"] as string;
    var currentCategory = ViewData["CurrentCategory"] as int?;
    var minPrice = ViewData["MinPrice"] as decimal?;
    var maxPrice = ViewData["MaxPrice"] as decimal?;
    var status = ViewData["Status"] as string;
}

<div class="container py-5">
    <!-- Profile Header -->
    <div class="card border-0 shadow-sm rounded-5 bg-white mb-5 animate-fade-up">
        <div class="card-body p-4 p-lg-5">
            <div class="d-flex align-items-center">
                <div class="avatar-lg bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-4 overflow-hidden" style="width: 80px; height: 80px;">
                    @if (!string.IsNullOrEmpty(targetUserImage))
                    {
                        <img src="@targetUserImage" class="w-100 h-100 object-fit-cover" alt="@targetUser" />
                    }
                    else
                    {
                        <i class="bi bi-person-fill fs-1"></i>
                    }
                </div>
                <div>
                    <h6 class="text-uppercase text-muted small fw-bold mb-1 letter-spacing-1">Seller Profile</h6>
                    <h1 class="display-5 fw-bold mb-0">@targetUser</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 100px;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-sliders me-2 text-primary"></i>Filters</h5>
                    <form method="get">
                        <input type="hidden" name="username" value="@ViewContext.RouteData.Values["username"]" />
                        
                        <div class="mb-3">
                            <label class="form-label small text-uppercase text-muted fw-bold">Search</label>
                            <input type="text" name="searchTerm" class="form-control" value="@currentSearch" placeholder="Keywords..." />
                        </div>

                        <div class="mb-3">
                            <label class="form-label small text-uppercase text-muted fw-bold">Category</label>
                            <select name="categoryId" class="form-select" asp-items="categories">
                                <option value="">All Categories</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small text-uppercase text-muted fw-bold">Price Range</label>
                            <div class="d-flex gap-2 align-items-center">
                                <input type="number" name="minPrice" class="form-control" placeholder="Min" value="@minPrice" />
                                <input type="number" name="maxPrice" class="form-control" placeholder="Max" value="@maxPrice" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label small text-uppercase text-muted fw-bold">Status</label>
                            <select name="status" class="form-select">
                                <option value="active">Active Only</option>
                                <option value="all">All Auctions</option>
                                <option value="closed">Closed Only</option>
                            </select>
                        </div>
                        
                        <input type="hidden" name="sortOrder" value="@currentSort" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-pill">Apply Filters</button>
                            <a asp-action="UserAuctions" asp-route-username="@ViewContext.RouteData.Values["username"]" class="btn btn-outline-secondary rounded-pill">Reset</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Results -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold m-0">Listings</h3>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle rounded-pill px-4" type="button" data-bs-toggle="dropdown">
                        Sort By
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-4">
                        <li><a class="dropdown-item" asp-route-username="@ViewContext.RouteData.Values["username"]" asp-route-sortOrder="" asp-route-status="@status">Newest First</a></li>
                        <li><a class="dropdown-item" asp-route-username="@ViewContext.RouteData.Values["username"]" asp-route-sortOrder="price_asc" asp-route-status="@status">Price: Low to High</a></li>
                        <li><a class="dropdown-item" asp-route-username="@ViewContext.RouteData.Values["username"]" asp-route-sortOrder="price_desc" asp-route-status="@status">Price: High to Low</a></li>
                    </ul>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 bg-white rounded-4 shadow-sm">
                    <i class="bi bi-search display-1 text-muted opacity-25"></i>
                    <h3 class="mt-3 text-muted">No auctions found</h3>
                    <p>This user has no listings matching these criteria.</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <partial name="_AuctionCardPartial" model="item" />
                        </div>
                    }
                </div>

                @if (Model.TotalPages > 1)
                {
                    <nav class="mt-5 d-flex justify-content-center">
                        <ul class="pagination">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link rounded-start-pill px-3" asp-route-pageNumber="@(Model.PageIndex - 1)" 
                                   asp-route-username="@ViewContext.RouteData.Values["username"]"
                                   asp-route-sortOrder="@currentSort" asp-route-searchTerm="@currentSearch" 
                                   asp-route-categoryId="@currentCategory" asp-route-minPrice="@minPrice" 
                                   asp-route-maxPrice="@maxPrice" asp-route-status="@status">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                            <li class="page-item disabled"><span class="page-link px-3">@Model.PageIndex / @Model.TotalPages</span></li>
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link rounded-end-pill px-3" asp-route-pageNumber="@(Model.PageIndex + 1)"
                                   asp-route-username="@ViewContext.RouteData.Values["username"]"
                                   asp-route-sortOrder="@currentSort" asp-route-searchTerm="@currentSearch"
                                   asp-route-categoryId="@currentCategory" asp-route-minPrice="@minPrice"
                                   asp-route-maxPrice="@maxPrice" asp-route-status="@status">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @if (currentCategory.HasValue) { <text>document.querySelector('select[name="categoryId"]').value = "@currentCategory";</text> }
        @if (!string.IsNullOrEmpty(status)) { <text>document.querySelector('select[name="status"]').value = "@status";</text> }
    </script>
}
