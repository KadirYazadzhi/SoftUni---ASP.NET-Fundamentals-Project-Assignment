@model AuctionHub.Application.DTOs.CategoryDto

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4 p-4 text-center">
                <div class="mb-4 text-danger">
                    <i class="bi bi-exclamation-circle display-1"></i>
                </div>
                <h3>Are you sure?</h3>
                <p class="text-muted">Do you really want to delete category <strong>@Model.Name</strong>? This process cannot be undone.</p>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-center mt-4">
                        <a asp-action="Index" class="btn btn-light px-4">Cancel</a>
                        <button type="submit" class="btn btn-danger px-4">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
