@model AuctionHub.Models.ViewModels.AuctionListViewModel

<div class="col">
    <div class="card h-100 border-0 shadow-sm rounded-4 position-relative">
        <div class="position-absolute top-0 start-0 m-3 z-1 d-flex flex-column gap-2">
            <span class="badge bg-white text-dark shadow-sm rounded-pill px-3 py-2">
                <i class="bi bi-tag-fill text-primary me-1"></i> @Model.Category
            </span>
            @if (Model.IsWinning.HasValue)
            {
                if (Model.IsWinning.Value)
                {
                    <span class="badge bg-success shadow-sm rounded-pill px-3 py-2">
                        <i class="bi bi-trophy-fill me-1"></i> Winning
                    </span>
                }
                else
                {
                    <span class="badge bg-danger shadow-sm rounded-pill px-3 py-2">
                        <i class="bi bi-arrow-down-circle-fill me-1"></i> Outbid
                    </span>
                }
            }
        </div>
        
        <div class="overflow-hidden rounded-top-4" style="height: 220px;">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/400x300?text=No+Image" : Model.ImageUrl)" 
                 class="card-img-top h-100 w-100 object-fit-cover transition-transform" 
                 alt="@Model.Title">
        </div>
        
        <div class="card-body p-4">
            <h5 class="card-title fw-bold mb-3 text-truncate">@Model.Title</h5>
            
            <div class="d-flex justify-content-between align-items-end mb-3">
                <div>
                    <small class="text-muted d-block mb-1">Current Bid</small>
                    <span class="h3 fw-bolder text-primary mb-0">@Model.CurrentPrice.ToString("C")</span>
                </div>
                <div class="text-end">
                    <small class="text-muted d-block mb-1">Ends in</small>
                    <span class="badge @(Model.EndTime < DateTime.Now.AddHours(24) ? "bg-danger-subtle text-danger" : "bg-primary-subtle text-primary") rounded-pill px-3">
                        <i class="bi bi-clock-fill me-1"></i> @Model.TimeRemaining
                    </span>
                </div>
            </div>
            
            <div class="d-grid mt-4">
                <a asp-controller="Auctions" asp-action="Details" asp-route-id="@Model.Id" 
                   class="btn btn-primary rounded-pill py-2 fw-bold">
                   Place Bid <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-transform {
        transition: transform 0.5s ease;
    }
    .card:hover .transition-transform {
        transform: scale(1.1);
    }
</style>