@using Microsoft.AspNetCore.Identity
@using AuctionHub.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);
    var balance = currentUser?.WalletBalance ?? 0.00m;

    if (User.IsInRole("Administrator"))
    {
        <li class="nav-item">
            <a class="nav-link text-danger fw-bold" asp-controller="Categories" asp-action="Index">Admin</a>
        </li>
    }

    <li class="nav-item d-flex align-items-center me-3">
        <a class="btn btn-sm btn-light rounded-pill border fw-bold text-primary" asp-controller="Wallet" asp-action="Index">
            <i class="bi bi-wallet2 me-1"></i> @balance.ToString("C")
        </a>
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
