@using Microsoft.AspNetCore.Identity
@using AuctionHub.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);
    var balance = currentUser?.WalletBalance ?? 0.00m;

    <li class="nav-item me-2">
        <a class="btn btn-sm btn-light rounded-pill border fw-bold text-primary px-3" asp-controller="Wallet" asp-action="Index" title="My Wallet">
            <i class="bi bi-wallet2 me-1"></i> @balance.ToString("C")
        </a>
    </li>

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <div class="avatar-xs bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                <i class="bi bi-person-fill"></i>
            </div>
            <span class="fw-bold d-none d-lg-inline">@currentUser?.DisplayName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-4 mt-3 py-2" aria-labelledby="userDropdown" style="min-width: 220px;">
            <li class="px-3 py-2 border-bottom mb-2 d-lg-none">
                <span class="text-muted small">Signed in as</span>
                <div class="fw-bold text-truncate">@currentUser?.DisplayName</div>
            </li>
            
            @if (User.IsInRole("Administrator"))
            {
                <li>
                    <a class="dropdown-item py-2 px-3 text-warning fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-shield-lock-fill me-2"></i>Admin Panel
                    </a>
                </li>
                <li><hr class="dropdown-divider opacity-50"></li>
            }

            <li>
                <a class="dropdown-item py-2 px-3" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-person-circle me-2"></i>My Profile
                </a>
            </li>
            <li>
                <a class="dropdown-item py-2 px-3" asp-controller="Auctions" asp-action="MyWatchlist">
                    <i class="bi bi-star-fill me-2 text-warning"></i>Watchlist
                </a>
            </li>
            <li>
                <a class="dropdown-item py-2 px-3" asp-controller="Auctions" asp-action="MyAuctions">
                    <i class="bi bi-tag-fill me-2"></i>My Listings
                </a>
            </li>
            <li>
                <a class="dropdown-item py-2 px-3" asp-controller="Auctions" asp-action="MyBids">
                    <i class="bi bi-hammer me-2"></i>My Bids
                </a>
            </li>
            <li>
                <a class="dropdown-item py-2 px-3" asp-controller="Wallet" asp-action="Index">
                    <i class="bi bi-credit-card-2-front me-2"></i>Wallet & History
                </a>
            </li>
            
            <li><hr class="dropdown-divider opacity-50"></li>
            
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item py-2 px-3 text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-link nav-link px-3" asp-area="Identity" asp-page="/Account/Login">Log In</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary rounded-pill px-4 ms-2" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
    </li>
}
</ul>