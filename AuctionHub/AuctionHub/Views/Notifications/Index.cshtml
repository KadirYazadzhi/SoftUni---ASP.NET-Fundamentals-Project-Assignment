@model IEnumerable<AuctionHub.Domain.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-bell-fill text-primary me-2"></i>Notifications</h2>
        @if (Model.Any(n => !n.IsRead))
        {
            <form asp-action="MarkAllRead" method="post">
                <button type="submit" class="btn btn-outline-primary rounded-pill btn-sm">
                    <i class="bi bi-check-all me-1"></i> Mark all as read
                </button>
            </form>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-white rounded-4 shadow-sm">
            <i class="bi bi-bell-slash display-1 text-muted opacity-25"></i>
            <h3 class="mt-3 text-muted">No notifications</h3>
            <p>You're all caught up!</p>
        </div>
    }
    else
    {
        <div class="list-group rounded-4 shadow-sm border-0 overflow-hidden">
            @foreach (var notification in Model)
            {
                <a href="@(notification.Link ?? "#")" class="list-group-item list-group-item-action p-4 border-0 border-bottom @(notification.IsRead ? "bg-white" : "bg-primary-subtle")">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-3">
                            <div class="rounded-circle d-flex align-items-center justify-content-center flex-shrink-0 @(notification.IsRead ? "bg-light text-muted" : "bg-primary text-white")" style="width: 42px; height: 42px;">
                                <i class="bi @(notification.IsRead ? "bi-envelope-open" : "bi-envelope-fill")"></i>
                            </div>
                            <div>
                                <h6 class="mb-1 fw-bold @(notification.IsRead ? "text-dark" : "text-primary")">@notification.Message</h6>
                                <small class="text-muted">@notification.CreatedOn.ToLocalTime().ToString("f")</small>
                            </div>
                        </div>
                        @if (!notification.IsRead)
                        {
                            <span class="badge bg-primary rounded-pill ms-2">New</span>
                        }
                    </div>
                </a>
            }
        </div>
    }
</div>
