@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <!-- Hero Section -->
    <section class="text-center mb-5 animate-fade-up">
        <span class="badge bg-primary-subtle text-primary mb-3 px-4 py-2 rounded-pill fw-bold">Our Story</span>
        <h1 class="display-4 fw-bold mb-4">Connecting People Through <br><span class="text-primary">Unique Treasures</span></h1>
        <p class="lead text-muted mx-auto" style="max-width: 700px;">
            Founded in 2026, AuctionHub began with a simple mission: to create a secure, transparent, and exciting marketplace for collectors worldwide.
        </p>
    </section>

    <!-- Content Blocks (Now 4 Cards with Hover Inversion) -->
    <div class="row g-4 mb-5">
        <!-- Card 1: AuctionHub -->
        <div class="col-md-6 col-xl-3 animate-fade-up delay-100">
            <div class="card about-card border-0 shadow-sm rounded-5 h-100 p-4 bg-white transition-all" style="cursor: pointer;">
                <div class="icon-box-md bg-primary text-white rounded-circle mb-4 d-flex align-items-center justify-content-center mx-auto transition-all" style="width: 60px; height: 60px;">
                    <i class="bi bi-rocket-takeoff-fill fs-3"></i>
                </div>
                <h5 class="fw-bold mb-3 text-center transition-all">What is AuctionHub?</h5>
                <p class="text-muted small text-center transition-all">
                    A premium online auction platform designed for both seasoned collectors and casual enthusiasts.
                </p>
            </div>
        </div>
        <!-- Card 2: Values -->
        <div class="col-md-6 col-xl-3 animate-fade-up delay-200">
            <div class="card about-card border-0 shadow-sm rounded-5 h-100 p-4 bg-white transition-all" style="cursor: pointer;">
                <div class="icon-box-md bg-success text-white rounded-circle mb-4 d-flex align-items-center justify-content-center mx-auto transition-all" style="width: 60px; height: 60px;">
                    <i class="bi bi-shield-lock-fill fs-3"></i>
                </div>
                <h5 class="fw-bold mb-3 text-center transition-all">Our Core Values</h5>
                <p class="text-muted small text-center transition-all">
                    Integrity, security, and community are the pillars. Every bid is protected by our advanced escrow.
                </p>
            </div>
        </div>
        <!-- Card 3: Global -->
        <div class="col-md-6 col-xl-3 animate-fade-up delay-300">
            <div class="card about-card border-0 shadow-sm rounded-5 h-100 p-4 bg-white transition-all" style="cursor: pointer;">
                <div class="icon-box-md bg-warning text-white rounded-circle mb-4 d-flex align-items-center justify-content-center mx-auto transition-all" style="width: 60px; height: 60px;">
                    <i class="bi bi-globe-americas fs-3"></i>
                </div>
                <h5 class="fw-bold mb-3 text-center transition-all">Global Reach</h5>
                <p class="text-muted small text-center transition-all">
                    Connecting buyers and sellers from across the globe, facilitating trade of extraordinary items.
                </p>
            </div>
        </div>
        <!-- Card 4: Innovation -->
        <div class="col-md-6 col-xl-3 animate-fade-up delay-400">
            <div class="card about-card border-0 shadow-sm rounded-5 h-100 p-4 bg-white transition-all" style="cursor: pointer;">
                <div class="icon-box-md bg-info text-white rounded-circle mb-4 d-flex align-items-center justify-content-center mx-auto transition-all" style="width: 60px; height: 60px;">
                    <i class="bi bi-lightbulb-fill fs-3"></i>
                </div>
                <h5 class="fw-bold mb-3 text-center transition-all">Innovation</h5>
                <p class="text-muted small text-center transition-all">
                    Constantly evolving our platform with real-time features and secure payment methods.
                </p>
            </div>
        </div>
    </div>

    <!-- Contact & Email Form Section (Now Full Width) -->
    <section class="animate-fade-up delay-500">
        <div class="card border-0 shadow-lg rounded-5 overflow-hidden">
            <div class="row g-0">
                <div class="col-lg-4 bg-primary p-5 text-white d-flex flex-column justify-content-center">
                    <h3 class="fw-bold mb-4 text-white">Get in Touch</h3>
                    <p class="mb-5 opacity-75">Have questions or need assistance? Our team is here to help you 24/7.</p>
                    
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-box-sm bg-white text-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="bi bi-geo-alt-fill"></i>
                        </div>
                        <span>123 Innovation Drive, Sofia, BG</span>
                    </div>
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-box-sm bg-white text-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="bi bi-envelope-fill"></i>
                        </div>
                        <span>hello@auctionhub.com</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="icon-box-sm bg-white text-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <i class="bi bi-telephone-fill"></i>
                        </div>
                        <span>+359 888 000 000</span>
                    </div>
                </div>
                <div class="col-lg-8 p-5 bg-white">
                    <div class="px-lg-4">
                        <h4 class="fw-bold mb-4 text-dark">Send us a message</h4>
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success rounded-pill border-0 shadow-sm mb-4 px-4">
                                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger rounded-pill border-0 shadow-sm mb-4 px-4">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                            </div>
                        }
                        <form asp-action="Contact" method="post" class="row g-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted fw-bold">YOUR NAME</label>
                                <input type="text" name="name" class="form-control rounded-pill border-light bg-light px-4 py-3" placeholder="John Doe" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label small text-muted fw-bold">YOUR EMAIL</label>
                                <input type="email" name="email" class="form-control rounded-pill border-light bg-light px-4 py-3" placeholder="name@example.com" required>
                            </div>
                            <div class="col-12 mb-4">
                                <label class="form-label small text-muted fw-bold">MESSAGE</label>
                                <textarea name="message" class="form-control rounded-4 border-light bg-light px-4 py-3" rows="4" placeholder="How can we help you?" required></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary rounded-pill px-5 py-3 fw-bold shadow-sm hover-lift">
                                    Send Message <i class="bi bi-send ms-2"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .transition-all { transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1); }

    .about-card:hover {
        background-color: var(--bs-primary) !important;
        transform: translateY(-10px);
        box-shadow: 0 1rem 3rem rgba(67, 97, 238, 0.15) !important;
    }

    .about-card:hover h5, 
    .about-card:hover p {
        color: white !important;
    }

    .about-card:hover .icon-box-md {
        background-color: white !important;
        transform: scale(1.1);
    }

    /* Restore original icon colors on hover */
    .about-card:nth-child(1):hover .icon-box-md i { color: var(--bs-primary) !important; }
    .about-card:nth-child(2):hover .icon-box-md i { color: var(--bs-success) !important; }
    .about-card:nth-child(3):hover .icon-box-md i { color: var(--bs-warning) !important; }
    .about-card:nth-child(4):hover .icon-box-md i { color: var(--bs-info) !important; }
</style>