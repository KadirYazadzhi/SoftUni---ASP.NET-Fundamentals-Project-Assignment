@{
    ViewData["Title"] = "Help Center";
}

<div class="container py-5">
    <div class="text-center mb-5 animate-fade-up">
        <span class="badge bg-primary-subtle text-primary mb-3 px-4 py-2 rounded-pill">Support</span>
        <h1 class="display-4 fw-bold mb-3">How can we help?</h1>
        <p class="lead text-muted mx-auto mb-4" style="max-width: 600px;">Explore our documentation or browse common questions below.</p>
        
        <!-- Search Bar (Added back/enhanced) -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden border">
                    <span class="input-group-text bg-white border-0 ps-4"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" class="form-control border-0 px-2" placeholder="Search for help articles...">
                    <button class="btn btn-primary px-4 fw-bold" type="button">Search</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="accordion rounded-5 shadow-sm overflow-hidden border bg-white animate-fade-up delay-100" id="helpAccordion">
                <!-- FAQ Item 1 -->
                <div class="accordion-item border-0 border-bottom">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed py-4 px-4 fw-bold bg-transparent shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                            How do I place a bid?
                        </button>
                    </h2>
                    <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                        <div class="accordion-body p-4 text-muted small" style="line-height: 1.6;">
                            To place a bid, you must first be logged in. Navigate to an active auction, enter your bid amount (must be higher than the current price plus minimum increment), and click "Place Bid".
                        </div>
                    </div>
                </div>
                <!-- FAQ Item 2 -->
                <div class="accordion-item border-0 border-bottom">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed py-4 px-4 fw-bold bg-transparent shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                            What is "Buy It Now"?
                        </button>
                    </h2>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                        <div class="accordion-body p-4 text-muted small" style="line-height: 1.6;">
                            "Buy It Now" allows you to purchase an item immediately at a fixed price set by the seller, bypassing the bidding process. Once used, the auction ends instantly.
                        </div>
                    </div>
                </div>
                <!-- FAQ Item 3 -->
                <div class="accordion-item border-0 border-bottom">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed py-4 px-4 fw-bold bg-transparent shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                            How do I add funds to my wallet?
                        </button>
                    </h2>
                    <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                        <div class="accordion-body p-4 text-muted small" style="line-height: 1.6;">
                            Go to your Wallet page via the account dropdown. Click "Add Funds", enter the desired amount, and confirm. Your balance updates instantly.
                        </div>
                    </div>
                </div>
                <!-- FAQ Item 4 -->
                <div class="accordion-item border-0">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed py-4 px-4 fw-bold bg-transparent shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                            What happens if I'm outbid?
                        </button>
                    </h2>
                    <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#helpAccordion">
                        <div class="accordion-body p-4 text-muted small" style="line-height: 1.6;">
                            If someone places a higher bid than yours, your previous bid amount is automatically refunded to your wallet, and you will receive a notification.
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5 p-5 bg-primary rounded-5 text-white text-center shadow-lg animate-fade-up delay-200 position-relative overflow-hidden">
                <div class="position-relative z-2">
                    <h3 class="fw-bold mb-3 text-white">Still need help?</h3>
                    <p class="mb-4 opacity-75 text-white">Our support team is available to assist you with any issues.</p>
                    <a asp-action="About" class="btn btn-light text-primary rounded-pill px-5 py-3 fw-bold hover-lift shadow-sm mb-4">Contact Support</a>
                    
                    <div class="d-flex justify-content-center align-items-center gap-4 mt-2">
                        <div class="small opacity-75 d-flex align-items-center text-white">
                            <i class="bi bi-clock-history me-2"></i> Avg. response: &lt; 2 hours
                        </div>
                        <div class="small opacity-75 d-flex align-items-center text-white">
                            <i class="bi bi-chat-heart me-2"></i> 24/7 Priority Support
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .accordion-button:not(.collapsed) {
        color: var(--bs-primary);
        background-color: rgba(var(--bs-primary-rgb), 0.05);
    }
    .accordion-item:first-of-type .accordion-button {
        border-top-left-radius: calc(2rem - 1px);
        border-top-right-radius: calc(2rem - 1px);
    }
    .accordion-item:last-of-type .accordion-button.collapsed {
        border-bottom-left-radius: calc(2rem - 1px);
        border-bottom-right-radius: calc(2rem - 1px);
    }
</style>