@{
    ViewData["Title"] = "Welcome";
}

<!-- Hero Section -->
<section class="hero-section text-center position-relative overflow-hidden py-5 my-5">
    <div class="container position-relative z-2">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <span class="badge bg-primary-subtle text-primary mb-4 px-4 py-2 rounded-pill animate-fade-up">
                    <i class="bi bi-stars me-1"></i> New: Vintage Collection Live
                </span>
                <h1 class="hero-title mb-5 animate-fade-up delay-100">
                    Discover Extraordinary <br> <span class="text-primary">Items & Stories</span>
                </h1>
                <p class="hero-subtitle mx-auto mb-5 animate-fade-up delay-200">
                    The premier marketplace for collectors and enthusiasts. 
                    Bid on exclusive items, rare antiques, and modern treasures in real-time.
                </p>
                <div class="d-flex justify-content-center gap-3 animate-fade-up delay-300">
                    <a asp-controller="Auctions" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 py-3 shadow-lg hover-lift">
                        Start Exploring
                    </a>
                    <a asp-controller="Auctions" asp-action="Create" class="btn btn-outline-primary btn-lg rounded-pill px-5 py-3 bg-white hover-lift">
                        Sell Item
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Floating Elements (Decorative) -->
        <div class="d-none d-lg-block position-absolute top-50 start-0 translate-middle-y ms-5 opacity-50 animate-fade-up delay-300" style="z-index: -1;">
            <div class="card p-4 shadow-soft transform-rotate-n6" style="width: 220px; transform: rotate(-6deg);">
                <div class="bg-light rounded mb-3" style="height: 140px;"></div>
                <small class="fw-bold">Vintage Camera</small>
                <div class="text-primary fw-bold small">$450.00</div>
            </div>
        </div>
        
        <div class="d-none d-lg-block position-absolute top-50 end-0 translate-middle-y me-5 opacity-50 animate-fade-up delay-300" style="z-index: -1;">
             <div class="card p-4 shadow-soft" style="width: 220px; transform: rotate(6deg);">
                <div class="bg-light rounded mb-3" style="height: 140px;"></div>
                <small class="fw-bold">Rare Coin 1890</small>
                <div class="text-primary fw-bold small">$1,200.00</div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-6">
    <div class="container py-4">
        <div class="row text-center g-4">
            <div class="col-md-4 animate-fade-up delay-100">
                <div class="stat-card p-5 rounded-5 border border-primary border-opacity-25 h-100 transition-all">
                    <h2 class="fw-bold display-5 text-primary mb-2">10k+</h2>
                    <p class="text-muted mb-0 fw-medium">Active Auctions</p>
                </div>
            </div>
            <div class="col-md-4 animate-fade-up delay-200">
                <div class="stat-card p-5 rounded-5 border border-primary border-opacity-25 h-100 transition-all">
                    <h2 class="fw-bold display-5 text-primary mb-2">$2M+</h2>
                    <p class="text-muted mb-0 fw-medium">Daily Volume</p>
                </div>
            </div>
            <div class="col-md-4 animate-fade-up delay-300">
                <div class="stat-card p-5 rounded-5 border border-primary border-opacity-25 h-100 transition-all">
                    <h2 class="fw-bold display-5 text-primary mb-2">50k+</h2>
                    <p class="text-muted mb-0 fw-medium">Verified Users</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .stat-card {
        background-color: transparent;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    }
    .stat-card:hover {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary) !important;
        transform: translateY(-10px);
        shadow: 0 1rem 3rem rgba(67, 97, 238, 0.175);
    }
    .stat-card:hover h2, 
    .stat-card:hover p {
        color: white !important;
    }
</style>

<!-- Categories Preview -->
<section class="py-6 my-5">
    <div class="container">
        <div class="text-center mb-5 animate-fade-up">
            <h2 class="fw-bold mb-3">Browse by Category</h2>
            <p class="text-muted">Find exactly what you're looking for</p>
        </div>
        
        <div class="row g-4">
            <!-- Electronics -->
            <div class="col-6 col-md-3 animate-fade-up delay-100">
                <a asp-controller="Auctions" asp-action="Index" asp-route-categoryId="1" class="card h-100 text-decoration-none border-0 shadow-soft bg-light text-center py-5 hover-lift">
                    <div class="card-body">
                        <i class="bi bi-laptop fs-1 text-primary mb-3 d-block"></i>
                        <h5 class="fw-bold text-dark">Electronics</h5>
                        <small class="text-muted">340+ items</small>
                    </div>
                </a>
            </div>
            
            <!-- Art -->
            <div class="col-6 col-md-3 animate-fade-up delay-200">
                <a asp-controller="Auctions" asp-action="Index" asp-route-categoryId="2" class="card h-100 text-decoration-none border-0 shadow-soft bg-light text-center py-5 hover-lift">
                    <div class="card-body">
                        <i class="bi bi-palette fs-1 text-primary mb-3 d-block"></i>
                        <h5 class="fw-bold text-dark">Art & Design</h5>
                        <small class="text-muted">120+ items</small>
                    </div>
                </a>
            </div>
            
            <!-- Antiques -->
            <div class="col-6 col-md-3 animate-fade-up delay-300">
                <a asp-controller="Auctions" asp-action="Index" asp-route-categoryId="3" class="card h-100 text-decoration-none border-0 shadow-soft bg-light text-center py-5 hover-lift">
                    <div class="card-body">
                        <i class="bi bi-hourglass-split fs-1 text-primary mb-3 d-block"></i>
                        <h5 class="fw-bold text-dark">Antiques</h5>
                        <small class="text-muted">85+ items</small>
                    </div>
                </a>
            </div>
            
            <!-- Vehicles -->
            <div class="col-6 col-md-3 animate-fade-up delay-300">
                <a asp-controller="Auctions" asp-action="Index" asp-route-categoryId="4" class="card h-100 text-decoration-none border-0 shadow-soft bg-light text-center py-5 hover-lift">
                    <div class="card-body">
                        <i class="bi bi-car-front fs-1 text-primary mb-3 d-block"></i>
                        <h5 class="fw-bold text-dark">Vehicles</h5>
                        <small class="text-muted">50+ items</small>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- How It Works -->
<section class="py-5 bg-white border-top">
    <div class="container py-4">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="p-5 bg-light rounded-xl">
                     <i class="bi bi-shield-check display-1 text-primary opacity-25"></i>
                </div>
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-4">How it works</h2>
                
                <div class="d-flex mb-4">
                    <div class="step-circle bg-primary text-white">1</div>
                    <div class="ms-3">
                        <h5 class="fw-bold">Create an Account</h5>
                        <p class="text-muted">Sign up in seconds and verify your identity to ensure a safe marketplace.</p>
                    </div>
                </div>
                
                <div class="d-flex mb-4">
                    <div class="step-circle bg-primary text-white">2</div>
                    <div class="ms-3">
                        <h5 class="fw-bold">Place Your Bid</h5>
                        <p class="text-muted">Find items you love and place a bid. We'll notify you if you're outbid.</p>
                    </div>
                </div>
                
                <div class="d-flex">
                    <div class="step-circle bg-primary text-white">3</div>
                    <div class="ms-3">
                        <h5 class="fw-bold">Win & Pay Securely</h5>
                        <p class="text-muted">If you win, pay securely through our escrow system and track your delivery.</p>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section class="py-5">
    <div class="container">
        <div class="bg-primary rounded-xl p-5 text-center text-white position-relative overflow-hidden">
            <div class="position-relative z-2">
                <h2 class="fw-bold mb-3">Ready to start selling?</h2>
                <p class="lead mb-4 opacity-75">Join thousands of successful sellers on AuctionHub today.</p>
                <a asp-controller="Auctions" asp-action="Create" class="btn btn-light text-primary fw-bold rounded-pill px-5 py-3">
                    Create Listing
                </a>
            </div>
            <div class="position-absolute top-0 start-0 w-100 h-100 bg-white opacity-10" style="background-image: radial-gradient(#fff 1px, transparent 1px); background-size: 20px 20px;"></div>
        </div>
    </div>
</section>