@{
    ViewData["Title"] = "Welcome to AuctionHub";
}

<div class="p-5 mb-4 bg-light rounded-3 border shadow-sm">
    <div class="container-fluid py-5 text-center">
        <h1 class="display-4 fw-bold text-primary">AuctionHub</h1>
        <p class="col-md-8 fs-4 mx-auto text-muted">
            The best place to find unique items, collectibles, and great deals. 
            Join our community today and start bidding!
        </p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
            <a asp-controller="Auctions" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">Browse Auctions</a>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Auctions" asp-action="Create" class="btn btn-outline-secondary btn-lg px-4">Start Selling</a>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-lg px-4">Sign Up Now</a>
            }
        </div>
    </div>
</div>

<div class="row text-center mt-5">
    <div class="col-md-4">
        <div class="p-3">
            <div class="mb-3">
                <i class="bi bi-tag-fill text-primary" style="font-size: 3rem;"></i>
            </div>
            <h3>Easy Selling</h3>
            <p>Create a listing in minutes with our simple and intuitive interface.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="p-3">
            <div class="mb-3">
                <i class="bi bi-gavel text-primary" style="font-size: 3rem;"></i>
            </div>
            <h3>Safe Bidding</h3>
            <p>Our real-time bidding system ensures fairness and transparency for all users.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="p-3">
            <div class="mb-3">
                <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
            </div>
            <h3>Secure Platform</h3>
            <p>Your data is protected with the latest security standards in ASP.NET Core.</p>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}