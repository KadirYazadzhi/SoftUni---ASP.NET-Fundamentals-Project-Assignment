@{
    ViewData["Title"] = "Welcome";
}

<!-- Hero Section -->
<section class="hero-section text-center position-relative overflow-hidden py-5 my-5">
    <div class="container position-relative z-2">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <span class="badge bg-primary-subtle text-primary mb-4 px-4 py-2 rounded-pill animate-fade-up">
                    <i class="bi bi-stars me-1"></i> New: Vintage Collection Live
                </span>
                <h1 class="hero-title mb-5 animate-fade-up delay-100">
                    Discover Extraordinary <br> <span class="text-primary">Items & Stories</span>
                </h1>
                <p class="hero-subtitle mx-auto mb-5 animate-fade-up delay-200">
                    The premier marketplace for collectors and enthusiasts. 
                    Bid on exclusive items, rare antiques, and modern treasures in real-time.
                </p>
                <div class="d-flex justify-content-center gap-3 animate-fade-up delay-300">
                    <a asp-controller="Auctions" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 py-3 shadow-lg hover-lift">
                        Start Exploring
                    </a>
                    <a asp-controller="Auctions" asp-action="Create" class="btn btn-outline-primary btn-lg rounded-pill px-5 py-3 bg-white hover-lift">
                        Sell Item
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Floating Elements (Decorative) -->
        <div class="d-none d-lg-block position-absolute top-50 start-0 translate-middle-y ms-5 opacity-50 animate-fade-up delay-300" style="z-index: -1;">
            <div class="card p-4 shadow-soft transform-rotate-n6" style="width: 220px; transform: rotate(-6deg);">
                <div class="bg-light rounded mb-3" style="height: 140px;"></div>
                <small class="fw-bold">Vintage Camera</small>
                <div class="text-primary fw-bold small">$450.00</div>
            </div>
        </div>
        
        <div class="d-none d-lg-block position-absolute top-50 end-0 translate-middle-y me-5 opacity-50 animate-fade-up delay-300" style="z-index: -1;">
             <div class="card p-4 shadow-soft" style="width: 220px; transform: rotate(6deg);">
                <div class="bg-light rounded mb-3" style="height: 140px;"></div>
                <small class="fw-bold">Rare Coin 1890</small>
                <div class="text-primary fw-bold small">$1,200.00</div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-6">
    <div class="container py-4">
        <div class="row text-center g-4 align-items-center">
            <!-- Side Card Left -->
            <div class="col-md-4 animate-fade-up delay-100">
                <div class="stat-card card h-100 border-0 shadow-sm rounded-5 bg-white py-5 transition-all">
                    <div class="card-body">
                        <h2 class="fw-bold display-5 text-primary mb-2 transition-all">10k+</h2>
                        <p class="text-muted mb-0 fw-medium transition-all">Active Auctions</p>
                    </div>
                </div>
            </div>
            <!-- Center Active Card -->
            <div class="col-md-4 animate-fade-up delay-200">
                <div class="stat-card card h-100 border-0 shadow-sm rounded-5 bg-white py-5 transition-all">
                    <div class="card-body">
                        <h2 class="fw-bold display-5 text-primary mb-2 transition-all">$2M+</h2>
                        <p class="text-muted mb-0 fw-medium transition-all">Daily Volume</p>
                    </div>
                </div>
            </div>
            <!-- Side Card Right -->
            <div class="col-md-4 animate-fade-up delay-300">
                <div class="stat-card card h-100 border-0 shadow-sm rounded-5 bg-white py-5 transition-all">
                    <div class="card-body">
                        <h2 class="fw-bold display-5 text-primary mb-2 transition-all">50k+</h2>
                        <p class="text-muted mb-0 fw-medium transition-all">Verified Users</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Preview -->
<section class="py-6 my-5">
    <div class="container">
        <div class="text-center mb-5 animate-fade-up">
            <h2 class="fw-bold mb-3">Browse by Category</h2>
            <p class="text-muted">Find exactly what you're looking for</p>
        </div>
        
        <div class="row g-4">
            <!-- Electronics -->
            <div class="col-6 col-md-3 animate-fade-up delay-100">
                <a asp-controller="Auctions" asp-action="Index" asp-route-categoryId="1" class="category-card card h-100 text-decoration-none border-0 shadow-sm rounded-5 bg-white text-center py-5 transition-all">
                    <div class="card-body">
                        <div class="icon-box bg-primary-subtle text-primary rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center transition-all" style="width: 70px; height: 70px;">
                            <i class="bi bi-laptop fs-2"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-1 transition-all">Electronics</h5>
                        <small class="text-muted transition-all">340+ items</small>
                    </div>
                </a>
            </div>
            
            <!-- Art -->
            <div class="col-6 col-md-3 animate-fade-up delay-200">
                <a asp-controller="Auctions" asp-action="Index" asp-route-categoryId="2" class="category-card card h-100 text-decoration-none border-0 shadow-sm rounded-5 bg-white text-center py-5 transition-all">
                    <div class="card-body">
                        <div class="icon-box bg-success-subtle text-success rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center transition-all" style="width: 70px; height: 70px;">
                            <i class="bi bi-palette fs-2"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-1 transition-all">Art & Design</h5>
                        <small class="text-muted transition-all">120+ items</small>
                    </div>
                </a>
            </div>
            
            <!-- Antiques -->
            <div class="col-6 col-md-3 animate-fade-up delay-300">
                <a asp-controller="Auctions" asp-action="Index" asp-route-categoryId="3" class="category-card card h-100 text-decoration-none border-0 shadow-sm rounded-5 bg-white text-center py-5 transition-all">
                    <div class="card-body">
                        <div class="icon-box bg-warning-subtle text-warning rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center transition-all" style="width: 70px; height: 70px;">
                            <i class="bi bi-hourglass-split fs-2"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-1 transition-all">Antiques</h5>
                        <small class="text-muted transition-all">85+ items</small>
                    </div>
                </a>
            </div>
            
            <!-- Vehicles -->
            <div class="col-6 col-md-3 animate-fade-up delay-300">
                <a asp-controller="Auctions" asp-action="Index" asp-route-categoryId="4" class="category-card card h-100 text-decoration-none border-0 shadow-sm rounded-5 bg-white text-center py-5 transition-all">
                    <div class="card-body">
                        <div class="icon-box bg-danger-subtle text-danger rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center transition-all" style="width: 70px; height: 70px;">
                            <i class="bi bi-car-front fs-2"></i>
                        </div>
                        <h5 class="fw-bold text-dark mb-1 transition-all">Vehicles</h5>
                        <small class="text-muted transition-all">50+ items</small>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- How It Works -->
<section class="py-5">
    <div class="container py-4">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="p-5 bg-light rounded-xl text-center">
                    <img src="~/images/how-it-work.svg" class="img-fluid animate-fade-up" style="max-height: 400px;" alt="How it works" />
                </div>
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-4">How it works</h2>
                
                <div class="d-flex mb-4">
                    <div class="step-circle bg-primary text-white">1</div>
                    <div class="ms-3">
                        <h5 class="fw-bold">Create an Account</h5>
                        <p class="text-muted">Sign up in seconds and verify your identity to ensure a safe marketplace.</p>
                    </div>
                </div>
                
                <div class="d-flex mb-4">
                    <div class="step-circle bg-primary text-white">2</div>
                    <div class="ms-3">
                        <h5 class="fw-bold">Place Your Bid</h5>
                        <p class="text-muted">Find items you love and place a bid. We'll notify you if you're outbid.</p>
                    </div>
                </div>
                
                <div class="d-flex">
                    <div class="step-circle bg-primary text-white">3</div>
                    <div class="ms-3">
                        <h5 class="fw-bold">Win & Pay Securely</h5>
                        <p class="text-muted">If you win, pay securely through our escrow system and track your delivery.</p>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="py-6 border-top">
    <div class="container">
        <div class="row align-items-center g-5">
            <!-- Left Column: FAQ Accordion -->
            <div class="col-lg-6 animate-fade-up">
                <span class="badge bg-primary-subtle text-primary mb-3 px-4 py-2 rounded-pill">FAQ</span>
                <h2 class="fw-bold mb-5 display-5">Common Questions</h2>
                
                <div class="accordion custom-faq" id="homeFaq">
                    <!-- Q1 -->
                    <div class="accordion-item border-0 border-bottom mb-2">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed py-4 px-0 bg-transparent fw-bold shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#q1">
                                Is it safe to bid on AuctionHub?
                            </button>
                        </h2>
                        <div id="q1" class="accordion-collapse collapse" data-bs-parent="#homeFaq">
                            <div class="accordion-body px-0 pt-0 text-muted pb-4">
                                Yes, absolutely. We use a secure escrow system where your funds are held safely until the transaction is verified. Every user is verified to ensure a trustworthy community.
                            </div>
                        </div>
                    </div>

                    <!-- Q2 -->
                    <div class="accordion-item border-0 border-bottom mb-2">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed py-4 px-0 bg-transparent fw-bold shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#q2">
                                How do I get my money back if I'm outbid?
                            </button>
                        </h2>
                        <div id="q2" class="accordion-collapse collapse" data-bs-parent="#homeFaq">
                            <div class="accordion-body px-0 pt-0 text-muted pb-4">
                                The system handles this automatically. The moment another user places a higher bid, the full amount of your previous bid is instantly credited back to your AuctionHub wallet.
                            </div>
                        </div>
                    </div>

                    <!-- Q3 -->
                    <div class="accordion-item border-0 border-bottom mb-2">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed py-4 px-0 bg-transparent fw-bold shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#q3">
                                Can I cancel a bid after placing it?
                            </h2>
                        </h2>
                        <div id="q3" class="accordion-collapse collapse" data-bs-parent="#homeFaq">
                            <div class="accordion-body px-0 pt-0 text-muted pb-4">
                                In order to maintain the integrity of the auctions, bids are legally binding and cannot be canceled once placed. We encourage users to bid responsibly.
                            </div>
                        </div>
                    </div>

                    <!-- Q4 -->
                    <div class="accordion-item border-0 border-bottom mb-2">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed py-4 px-0 bg-transparent fw-bold shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#q4">
                                How do I sell an item?
                            </button>
                        </h2>
                        <div id="q4" class="accordion-collapse collapse" data-bs-parent="#homeFaq">
                            <div class="accordion-body px-0 pt-0 text-muted pb-4">
                                Simply click the "Sell Item" button in the navbar, fill in the details about your item, set your starting price, and upload a clear photo. Your listing will go live instantly.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Image (Matching How It Works style) -->
            <div class="col-lg-6 animate-fade-up delay-200">
                <div class="p-5 bg-light rounded-xl text-center shadow-soft">
                    <img src="~/images/how-it-work.svg" class="img-fluid" style="max-height: 400px;" alt="FAQ Illustration" />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* FAQ Accordion Styling */
    .custom-faq .accordion-button::after {
        background-image: none;
        content: '+';
        font-family: 'Inter', sans-serif;
        font-size: 1.5rem;
        font-weight: 300;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
        color: var(--bs-primary);
    }

    .custom-faq .accordion-button:not(.collapsed)::after {
        transform: rotate(45deg);
        color: var(--bs-danger);
    }

    .custom-faq .accordion-button:not(.collapsed) {
        color: var(--bs-primary);
    }
</style>

<style>
    .transition-all { transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1); }
    
    /* Stats Section Styles */
    .stat-card {
        cursor: pointer;
    }
    .stat-card.active {
        transform: translateY(-15px);
        box-shadow: 0 1rem 3rem rgba(67, 97, 238, 0.25) !important;
    }
    
    .stat-card:not(.active):hover {
        background-color: var(--bs-primary) !important;
        transform: translateY(-15px);
        box-shadow: 0 1rem 3rem rgba(67, 97, 238, 0.2) !important;
    }
    
    .stat-card:not(.active):hover h2, 
    .stat-card:not(.active):hover p {
        color: white !important;
    }

    /* Category Section Styles */
    .category-card:hover {
        background-color: var(--bs-primary) !important;
        transform: translateY(-10px);
        box-shadow: 0 1rem 3rem rgba(67, 97, 238, 0.15) !important;
    }
    .category-card:hover h5, 
    .category-card:hover small {
        color: white !important;
    }
    .category-card:hover .icon-box {
        background-color: white !important;
        color: var(--bs-primary) !important;
        transform: scale(1.1);
    }
</style>
