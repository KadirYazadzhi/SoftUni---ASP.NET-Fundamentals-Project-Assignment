@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="fw-bold mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post">
    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
    
    <div class="mb-3">
        <label asp-for="Input.OldPassword" class="form-label small text-muted text-uppercase fw-bold"></label>
        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter current password" />
        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.NewPassword" class="form-label small text-muted text-uppercase fw-bold"></label>
        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter new password" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Input.ConfirmPassword" class="form-label small text-muted text-uppercase fw-bold"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm new password" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">Update Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
