@page
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="fw-bold mb-4">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-8">
        <p class="text-muted mb-4">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <div class="alert alert-warning rounded-4 border-0 mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </div>
        <div class="d-flex gap-3">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-outline-primary rounded-pill px-4" type="submit">Download Data</button>
            </form>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger rounded-pill px-4">Delete Account</a>
        </div>
    </div>
</div>
