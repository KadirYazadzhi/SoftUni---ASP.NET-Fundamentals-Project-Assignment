@model Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="row justify-content-center animate-fade-up">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-5 overflow-hidden">
            <div class="card-header bg-primary text-white p-4 border-0">
                <h4 class="mb-0 fw-bold"><i class="bi bi-folder-plus me-2"></i> Create Category</h4>
            </div>
            <div class="card-body p-4 p-lg-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label text-muted small fw-bold text-uppercase">Category Name</label>
                        <input asp-for="Name" class="form-control form-control-lg bg-light border-0 rounded-pill px-4" placeholder="e.g. Vintage Electronics" autofocus />
                        <span asp-validation-for="Name" class="text-danger small ms-3"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm hover-lift">Create Category</button>
                        <a asp-action="Index" class="btn btn-light btn-lg rounded-pill text-muted">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}