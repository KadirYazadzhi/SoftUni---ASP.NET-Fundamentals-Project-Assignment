@model IEnumerable<AuctionListViewModel>
@{
    ViewData["Title"] = "Manage Auctions";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h2 class="fw-bold mb-1">Manage Auctions</h2>
        <p class="text-muted">Full administrative control over all listings.</p>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-5 overflow-hidden animate-fade-up delay-100">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 border-0 py-3">Item</th>
                        <th class="border-0 py-3">Category</th>
                        <th class="border-0 py-3">Price</th>
                        <th class="border-0 py-3">Status</th>
                        <th class="border-0 py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-4 overflow-hidden me-3 shadow-sm" style="width: 50px; height: 50px;">
                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/50" : item.ImageUrl)" 
                                             alt="" class="w-100 h-100 object-fit-cover">
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.Title</div>
                                        <small class="text-muted">ID: @item.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border rounded-pill px-3">
                                    <i class="bi bi-tag-fill me-1 text-secondary"></i> @item.Category
                                </span>
                            </td>
                            <td class="fw-bold text-primary">@item.CurrentPrice.ToString("C")</td>
                            <td>
                                @if (item.IsActive && item.EndTime > DateTime.UtcNow)
                                {
                                    <span class="badge bg-success-subtle text-success rounded-pill px-3">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3">Closed</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-area="" asp-controller="Auctions" asp-action="Details" asp-route-id="@item.Id" target="_blank" 
                                       class="btn btn-sm btn-outline-primary rounded-pill" title="View">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('ADMIN WARNING: This will permanently delete the auction and all associated bids. Continue?');">
                                        <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3 shadow-sm" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>