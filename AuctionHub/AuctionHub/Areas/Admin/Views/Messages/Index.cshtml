@model IEnumerable<AuctionHub.Application.DTOs.ContactMessageDto>
@{
    ViewData["Title"] = "Inbox";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h2 class="fw-bold mb-1">Inbox</h2>
        <p class="text-muted">Direct messages from the contact form.</p>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-5 overflow-hidden animate-fade-up delay-100">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 border-0 py-3">From</th>
                        <th class="border-0 py-3">Message</th>
                        <th class="border-0 py-3">Date</th>
                        <th class="border-0 py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var m in Model)
                    {
                        <tr class="@(m.IsRead ? "opacity-75" : "bg-primary-subtle bg-opacity-10 fw-bold")">
                            <td class="ps-4 py-3">
                                <div>@m.Name</div>
                                <small class="text-muted">@m.Email</small>
                            </td>
                            <td style="max-width: 400px;">
                                <div class="text-truncate" title="@m.Message">@m.Message</div>
                            </td>
                            <td class="text-muted small">@m.SentOn.ToLocalTime().ToString("g")</td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    @if (!m.IsRead)
                                    {
                                        <form asp-action="MarkRead" asp-route-id="@m.Id" method="post">
                                            <button type="submit" class="btn btn-sm btn-outline-primary rounded-pill px-3">Mark Read</button>
                                        </form>
                                    }
                                    <form asp-action="Delete" asp-route-id="@m.Id" method="post" onsubmit="return confirm('Delete message?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">No messages found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
