@model IEnumerable<AuctionHub.Application.DTOs.UserDetailsDto>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="d-flex justify-content-between align-items-center mb-4 animate-fade-up">
    <div>
        <h2 class="fw-bold mb-1">User Management</h2>
        <p class="text-muted">View, manage, and moderate user accounts.</p>
    </div>
    <form class="d-flex gap-2" method="get">
        <input type="text" name="searchTerm" class="form-control rounded-pill px-4" placeholder="Search users..." value="@Context.Request.Query["searchTerm"]" />
        <button type="submit" class="btn btn-primary rounded-pill px-4">Search</button>
    </form>
</div>

<div class="card border-0 shadow-sm rounded-5 overflow-hidden animate-fade-up delay-100">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 border-0 py-3">User</th>
                        <th class="border-0 py-3">Role</th>
                        <th class="border-0 py-3">Balance</th>
                        <th class="border-0 py-3">Status</th>
                        <th class="border-0 py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-primary-subtle text-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                        @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                        {
                                            <img src="@user.ProfilePictureUrl" class="w-100 h-100 rounded-circle object-fit-cover" />
                                        }
                                        else
                                        {
                                            <i class="bi bi-person-fill"></i>
                                        }
                                    </div>
                                    <div>
                                        <div class="fw-bold">@user.DisplayName</div>
                                        <small class="text-muted">@user.Email</small>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge bg-light text-muted border">User</span></td>
                            <td class="fw-bold admin-price-value">@user.WalletBalance.ToString("C")</td>
                            <td>
                                @if (user.LockoutEnd > DateTimeOffset.UtcNow)
                                {
                                    <span class="badge bg-danger-subtle text-danger rounded-pill px-3">Locked</span>
                                }
                                else
                                {
                                    <span class="badge bg-success-subtle text-success rounded-pill px-3">Active</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        Details
                                    </a>
                                    <form asp-action="ToggleLock" asp-route-userId="@user.Id" method="post" onsubmit="return confirm('Change lock status for this user?');">
                                        @if (user.LockoutEnd > DateTimeOffset.UtcNow)
                                        {
                                            <button type="submit" class="btn btn-sm btn-success rounded-pill px-3">Unlock</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3">Lock</button>
                                        }
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
