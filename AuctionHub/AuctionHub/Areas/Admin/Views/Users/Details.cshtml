@model AuctionHub.Application.DTOs.UserDetailsDto
@{
    ViewData["Title"] = "User Details";
}

<div class="row g-4">
    <!-- User Info Card -->
    <div class="col-md-4">
        <div class="card border-0 shadow-sm rounded-5 overflow-hidden text-center p-4 h-100">
            <div class="avatar-xl mx-auto mb-3 rounded-circle overflow-hidden shadow-sm" style="width: 120px; height: 120px;">
                @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                {
                    <img src="@Model.ProfilePictureUrl" class="w-100 h-100 object-fit-cover" />
                }
                else
                {
                    <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-secondary">
                        <i class="bi bi-person-fill display-4"></i>
                    </div>
                }
            </div>
            <h4 class="fw-bold mb-1">@Model.DisplayName</h4>
            <p class="text-muted small">@Model.Email</p>
            <hr class="my-4 opacity-10">
            
            <div class="d-flex justify-content-between px-4 mb-3">
                <span class="text-muted">Balance</span>
                <span class="fw-bold text-primary">@Model.WalletBalance.ToString("C")</span>
            </div>
            
            <button class="btn btn-primary rounded-pill w-100 mb-2" data-bs-toggle="modal" data-bs-target="#balanceModal">
                Adjust Balance
            </button>
        </div>
    </div>

    <!-- Activity Tabs -->
    <div class="col-md-8 animate-fade-up delay-100">
        <div class="card border-0 shadow-sm rounded-5 h-100">
            <div class="card-header bg-white border-0 p-4">
                <ul class="nav nav-pills nav-fill bg-light rounded-pill p-1" id="userTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active rounded-pill fw-bold" id="auctions-tab" data-bs-toggle="tab" data-bs-target="#auctions" type="button" role="tab">Auctions (@Model.Auctions.Count)</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link rounded-pill fw-bold" id="bids-tab" data-bs-toggle="tab" data-bs-target="#bids" type="button" role="tab">Bids (@Model.Bids.Count)</button>
                    </li>
                </ul>
            </div>
            <div class="card-body p-4 pt-0">
                <div class="tab-content" id="userTabsContent">
                    <!-- Auctions Tab -->
                    <div class="tab-pane fade show active" id="auctions" role="tabpanel">
                        @if (Model.Auctions.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var auction in Model.Auctions)
                                {
                                    <div class="list-group-item border-0 px-0 py-3 d-flex align-items-center">
                                        <img src="@auction.ImageUrl" class="rounded-3 me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                        <div>
                                            <h6 class="mb-0 fw-bold">@auction.Title</h6>
                                            <small class="text-muted">@auction.CurrentPrice.ToString("C") â€¢ @(auction.IsActive ? "Active" : "Closed")</small>
                                        </div>
                                        <a asp-area="" asp-controller="Auctions" asp-action="Details" asp-route-id="@auction.Id" class="btn btn-sm btn-light rounded-pill ms-auto">View</a>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-center text-muted py-5">No auctions listed.</p>
                        }
                    </div>

                    <!-- Bids Tab -->
                    <div class="tab-pane fade" id="bids" role="tabpanel">
                        @if (Model.Bids.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var bid in Model.Bids)
                                {
                                    <div class="list-group-item border-0 px-0 py-3 d-flex align-items-center">
                                        <div>
                                            <h6 class="mb-0 fw-bold">Bid on @bid.AuctionTitle</h6>
                                            <small class="text-muted">@bid.BidTime.ToLocalTime()</small>
                                        </div>
                                        <span class="fw-bold text-primary ms-auto">@bid.Amount.ToString("C")</span>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-center text-muted py-5">No bids placed.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #userTabs .nav-link.active {
        color: white !important;
    }
</style>

<!-- Modal - PLACED OUTSIDE THE ANIMATED DIV TO FIX UI BUG -->
<div class="modal fade" id="balanceModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-5 shadow-lg">
            <div class="modal-header border-0 p-4">
                <h5 class="modal-title fw-bold">Adjust User Balance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4 pt-0">
                <form asp-action="UpdateBalance" method="post">
                    <input type="hidden" name="userId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Amount (use negative to deduct)</label>
                        <input type="number" name="amount" class="form-control rounded-pill" step="0.01" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">Reason</label>
                        <input type="text" name="reason" class="form-control rounded-pill" placeholder="e.g. Bonus, Correction" required />
                    </div>
                    <button type="submit" class="btn btn-primary rounded-pill w-100 py-2">Update Balance</button>
                </form>
            </div>
        </div>
    </div>
</div>