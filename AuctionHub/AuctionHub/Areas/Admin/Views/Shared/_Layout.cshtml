@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row g-4">
        <!-- Sidebar Navigation -->
        <div class="col-lg-2">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 100px;">
                <div class="card-body p-0 overflow-hidden">
                    <div class="bg-primary bg-gradient p-4 text-center text-white">
                        <div class="icon-box-lg bg-white text-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center shadow-sm" style="width: 60px; height: 60px;">
                            <i class="bi bi-shield-lock-fill fs-3"></i>
                        </div>
                        <h6 class="fw-bold mb-0">Admin Panel</h6>
                        <small class="opacity-75">Management Console</small>
                    </div>
                    
                    <div class="list-group list-group-flush border-0">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" 
                           class="list-group-item list-group-item-action border-0 px-4 py-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active-admin-link bg-primary-subtle text-primary fw-bold" : "text-muted hover-bg-light")">
                            <i class="bi bi-speedometer2 me-3"></i> Dashboard
                        </a>
                        <a asp-area="Admin" asp-controller="Auctions" asp-action="Index" 
                           class="list-group-item list-group-item-action border-0 px-4 py-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Auctions" ? "active-admin-link bg-primary-subtle text-primary fw-bold" : "text-muted hover-bg-light")">
                            <i class="bi bi-hammer me-3"></i> Manage Auctions
                        </a>
                        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" 
                           class="list-group-item list-group-item-action border-0 px-4 py-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active-admin-link bg-primary-subtle text-primary fw-bold" : "text-muted hover-bg-light")">
                            <i class="bi bi-tags me-3"></i> Categories
                        </a>
                    </div>
                    
                    <div class="p-4 border-top">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 rounded-pill">
                            <i class="bi bi-arrow-left me-2"></i> Exit Admin
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Admin Content -->
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm rounded-4 min-vh-100">
                <div class="card-body p-4 p-lg-5">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show rounded-pill shadow-sm border-0 px-4 py-3 mb-4 animate-fade-up" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show rounded-pill shadow-sm border-0 px-4 py-3 mb-4 animate-fade-up" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .active-admin-link {
        border-left: 4px solid var(--bs-primary) !important;
    }
    .hover-bg-light:hover {
        background-color: var(--bs-light);
        color: var(--bs-primary) !important;
    }
</style>

@section Scripts {
    @RenderSection("Scripts", required: false)
}